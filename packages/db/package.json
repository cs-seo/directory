{
  "name": "@evaustralia/database",
  "version": "1.0.0",
  "description": "PostgreSQL database schema, migrations, and type-safe repositories for EV Australia",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./migrations": {
      "import": "./dist/migrations/index.js",
      "types": "./dist/migrations/index.d.ts"
    },
    "./seeds": {
      "import": "./dist/seeds/index.js",
      "types": "./dist/seeds/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "migrate": "tsx scripts/run-migrations.ts",
    "seed": "tsx scripts/run-seed.ts",
    "test": "tsx scripts/test-db.ts",
    "reset": "tsx scripts/reset-db.ts"
  },
  "keywords": [
    "postgresql",
    "database",
    "schema",
    "ev",
    "australia",
    "electric-vehicle"
  ],
  "author": "EV Australia",
  "license": "MIT",
  "peerDependencies": {
    "pg": "^8.0.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.0.0",
    "pg": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "zod": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/evaustralia/ev-aus-db.git"
  }
}
